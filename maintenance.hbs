{{!-- The tag below includes the header - partials/header.hbs --}}
{{> header}}

<div id="main-content" role="main" class="pure-g-r">
    <aside id="main-sidebar" class="pure-u-1-2"{{#if @settings.cover}} style="background-image:url({{url @settings.cover}})"{{/if}}>
        {{> aside}}
    </aside>

    <section id="main" class="pure-u-1-2">
        <article class="post">
            <header class="post-header"><h1>{{L 'maintenance'}}</h1></header>
            <div class="post-content">
                {{content}}
            </div>
        </article>
    </section>
</div>

{{!-- The tag below includes the footer - partials/footer.hbs --}}
{{> footer}}